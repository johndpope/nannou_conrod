macro_rules! impl_point_for {
    ($T: ident, $Scalar: ident) => {
        /// Implement envelope::Point for Points with floating point parameters.
        impl Trait for Point<$T> {
            type X = time::Ticks;
            type Y = $T;
            fn x_to_scalar(x: time::Ticks) -> $Scalar {
                x.ticks() as $Scalar
            }
            fn x(&self) -> time::Ticks {
                self.ticks
            }
            fn y(&self) -> $T {
                self.value
            }
