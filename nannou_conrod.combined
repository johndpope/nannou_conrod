impl<B> Timeline<B> {
    /// Construct a new Timeline widget in it's default state.
    pub fn new(bars: B, ppqn: time::Ppqn) -> Self
    where
        B: IntoIterator<Item = time::TimeSig>,
    {
        Timeline {
            common: widget::CommonBuilder::default(),
