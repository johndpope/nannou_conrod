{
  "name": "timeline-editor-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for the RustFlash Timeline Editor using Puppeteer",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:headless": "HEADLESS=true jest",
    "test:debug": "DEBUG=true jest --runInBand"
  },
  "dependencies": {
    "puppeteer": "^23.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/puppeteer": "^7.0.0",
    "jest": "^29.5.0",
    "jest-puppeteer": "^10.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testMatch": ["**/*.test.ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 30000,
    "testEnvironment": "./test-environment.js"
  }
}